{
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest",
        "--executablePath=C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
        "--isolated"
      ],
      "env": {
        "PUPPETEER_EXECUTABLE_PATH": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe"
      },
      "disabled": false,
      "autoApprove": [
        "new_page",
        "navigate_page",
        "take_screenshot",
        "take_snapshot",
        "list_pages",
        "select_page",
        "click",
        "fill",
        "evaluate_script",
        "list_console_messages",
        "resize_page",
        "wait_for",
        "hover",
        "handle_dialog"
      ]
    }
  }
}