# Authentication
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
AUTH_SECRET=your_auth_secret_key_here

# PocketBase Configuration
POCKETBASE_URL=http://localhost:8090
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=your_admin_password

# Email Configuration (Development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage (Development - Local)
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# File Storage (Production - MinIO)
# STORAGE_TYPE=minio
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET=holographic-cards

# Application Configuration
PUBLIC_APP_NAME=KBO 홀로그래픽 카드 커뮤니티
PUBLIC_APP_DESCRIPTION=Apple 수준 프리미엄 KBO 야구 카드 제작 플랫폼
PUBLIC_APP_URL=http://localhost:5173
PUBLIC_API_URL=http://localhost:8090

# Apple-Style Theme Configuration
PUBLIC_THEME_MODE=dark
PUBLIC_ENABLE_ANIMATIONS=true
PUBLIC_ENABLE_HOLOGRAPHIC_EFFECTS=true
PUBLIC_PERFORMANCE_MODE=premium

# KBO Configuration
PUBLIC_KBO_SEASON=2024
PUBLIC_ENABLE_KBO_INTEGRATION=true
PUBLIC_DEFAULT_TEAM=lg

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_HOLOGRAPHIC=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

