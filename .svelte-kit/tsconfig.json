{
	"compilerOptions": {
		"paths": {
			"$lib": [
				"../src/lib"
			],
			"$lib/*": [
				"../src/lib/*"
			],
			"$css": [
				"../src/lib/styles/css"
			],
			"$css/*": [
				"../src/lib/styles/css/*"
			],
			"$fonts": [
				"../src/statics/fonts"
			],
			"$fonts/*": [
				"../src/statics/fonts/*"
			],
			"$img": [
				"../src/statics/img"
			],
			"$img/*": [
				"../src/statics/img/*"
			],
			"$data": [
				"../src/assets/data"
			],
			"$data/*": [
				"../src/assets/data/*"
			]
		},
		"rootDirs": [
			"..",
			"./types"
		],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./types/**/$types.d.ts",
		"../vite.config.js",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"../src/service-worker.js",
		"../src/service-worker.ts",
		"../src/service-worker.d.ts"
	]
}